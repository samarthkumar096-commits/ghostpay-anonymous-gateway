# ============================================
# INDEPENDENT PAYMENT SYSTEM CONFIGURATION
# NO Third Party - 100% Your Control
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000

# ============================================
# YOUR PAYMENT DETAILS (REQUIRED)
# ============================================

# UPI Details
UPI_ID=yourname@paytm
# Example: yourname@paytm, yourname@ybl, yourname@oksbi

# Bank Account Details
BANK_ACCOUNT_NAME=Your Full Name
BANK_ACCOUNT_NUMBER=1234567890
BANK_IFSC=SBIN0001234
BANK_NAME=State Bank of India
BANK_BRANCH=Main Branch, City Name

# Crypto Wallet Addresses
USDT_ADDRESS=TYourWalletAddress
# Get from: TronLink wallet (for TRC20 USDT)

BTC_ADDRESS=1YourBitcoinAddress
# Get from: Any Bitcoin wallet

ETH_ADDRESS=0xYourEthereumAddress
# Get from: MetaMask or any Ethereum wallet

# ============================================
# BUSINESS DETAILS
# ============================================

BUSINESS_NAME=Your Business Name
BUSINESS_EMAIL=business@example.com
BUSINESS_PHONE=+91-9876543210

# ============================================
# OPTIONAL: BANK API (For Auto-Verification)
# ============================================

# ICICI Bank API
ICICI_API_KEY=
ICICI_API_SECRET=

# HDFC Bank API
HDFC_API_KEY=
HDFC_API_SECRET=

# ============================================
# DATABASE (Optional)
# ============================================

MONGODB_URI=mongodb://localhost:27017/payments
REDIS_URL=redis://localhost:6379

# ============================================
# EMAIL CONFIGURATION
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# SECURITY
# ============================================

JWT_SECRET=your-super-secret-jwt-key-change-this
SESSION_SECRET=your-super-secret-session-key-change-this

# ============================================
# PAYMENT LIMITS
# ============================================

MIN_PAYMENT_AMOUNT=10
MAX_PAYMENT_AMOUNT=100000

# ============================================
# CRYPTO RATES
# ============================================

USDT_TO_INR=83.12
USDT_TO_USD=1.00

# ============================================
# ADMIN CREDENTIALS
# ============================================

ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password